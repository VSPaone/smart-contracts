# Application Configuration
PORT=80
API_BASE_URL=https://api.yourdomain.com

# MongoDB Configuration (Remote/Managed MongoDB instance)
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/smartcontracts?retryWrites=true&w=majority

# Security Configuration
JWT_SECRET=your-production-jwt-secret
ENCRYPTION_KEY=your-production-encryption-key
JWT_EXPIRATION=2h

# Node Configuration
MAX_NODE_CONNECTIONS=500
STATE_SYNC_INTERVAL=300

# Logging Configuration
LOG_DIRECTORY=/var/log/smartcontracts
LOG_LEVEL=info

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100

# Miscellaneous Configuration
CACHE_TTL=3600  # Cache Time-to-Live in seconds (1 hour)
DEFAULT_LANGUAGE=en
